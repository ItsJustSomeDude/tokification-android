# Top-most EditorConfig file
root = true

# https://gist.github.com/osipxd/9a786496634a1ef0ea622c9805601490

# Generic settings for all files
[*]
indent_style = tab # Use tabs for indentation
end_of_line = lf # Use Unix LF for line endings
charset = utf-8 # Use UTF-8 encoding
trim_trailing_whitespace = true # Remove trailing whitespace
insert_final_newline = true # Ensure files end with a newline
max_line_length = 120
# Uncomment if you want to show non-strict recommended guideline
# ij_visual_guides = 100

# General
ij_smart_tabs = false
ij_wrap_on_typing = false
ij_any_keep_indents_on_empty_lines = false

# Markdown files
[*.md]
indent_style = space
indent_size = 1
trim_trailing_whitespace = false # Allow trailing whitespace in Markdown files
max_line_length = off # Disable hard wrapping for Markdown

# This is needed to keep the Schema JSONs from breaking.
[*.json]
indent_style = space
indent_size = 2