<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/coordinatorLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
		app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<com.google.android.material.appbar.MaterialToolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="@color/colorPrimary"
			app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light" />

	</com.google.android.material.appbar.AppBarLayout>

	<ScrollView
		android:id="@+id/scrollView2"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/appbar">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/selected_coop"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Selected Coop: "
				android:textAppearance="@style/TextAppearance.AppCompat.Large" />

			<Button
				android:id="@+id/mainSwitchCoop"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Switch Coop" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal">

				<Button
					android:id="@+id/mainEditEvents"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Edit Events" />

				<Button
					android:id="@+id/mainEdit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Edit Coop" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:id="@+id/main_reports_buttons">

				<Button
					android:id="@+id/CopyDReport"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Detailed Report" />

				<Button
					android:id="@+id/CopyReport"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Copy Report" />

			</LinearLayout>
			
			<TextView
				android:id="@+id/main_current_report"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="gone" />

			<View
				android:id="@+id/divider"
				android:layout_width="match_parent"
				android:layout_height="3dp"
				android:background="?android:attr/listDivider" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<EditText
					android:id="@+id/mainPlayerName"
					android:layout_width="wrap_content"
					android:layout_height="48dp"
					android:layout_weight="14"
					android:hint="Player Name"
					android:inputType="text"
					android:singleLine="true" />

				<Button
					android:id="@+id/mainSaveName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Save" />

			</LinearLayout>

			<Switch
				android:id="@+id/mainAutoDismiss"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:text="Auto Dismiss Notifications" />

			<View
				android:id="@+id/divider2"
				android:layout_width="match_parent"
				android:layout_height="3dp"
				android:background="?android:attr/listDivider" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Send Fake Notification" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal">

				<EditText
					android:id="@+id/fake_player"
					android:layout_width="wrap_content"
					android:layout_height="48dp"
					android:layout_weight="4"
					android:hint="Player"
					android:inputType="text" />

				<EditText
					android:id="@+id/fake_coop"
					android:layout_width="wrap_content"
					android:layout_height="48dp"
					android:layout_weight="4"
					android:hint="Coop"
					android:inputType="text" />

				<Button
					android:id="@+id/fake_send"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Send" />

			</LinearLayout>

			<Switch
				android:id="@+id/fakeType"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:text="Send CR?" />

		</LinearLayout>

	</ScrollView>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/mainSend"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="16dp"
		android:clickable="true"
		android:contentDescription="Add Event"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:srcCompat="@android:drawable/ic_menu_add" />

</androidx.constraintlayout.widget.ConstraintLayout>