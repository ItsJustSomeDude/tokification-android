<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:id="@+id/coordinatorLayout"
     tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
         android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
         android:id="@+id/appbar">

        <com.google.android.material.appbar.MaterialToolbar
             android:layout_height="?attr/actionBarSize"
             android:layout_width="match_parent"
             android:background="@color/colorPrimary"
             app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
             android:id="@+id/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
         android:layout_height="0dp"
         android:layout_width="match_parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/appbar"
         android:id="@+id/scrollView2">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:textAppearance="@style/TextAppearance.AppCompat.Large"
                 android:id="@+id/selected_coop"
                 android:text="Selected Coop: " />

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:orientation="horizontal">

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:id="@+id/mainRefresh"
                     android:text="Refresh" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_weight="1"
                     android:id="@+id/mainSend"
                     android:text="Send Tokens" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:orientation="horizontal">

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_weight="1"
                     android:id="@+id/CopyReport"
                     android:text="Copy Report" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_weight="1"
                     android:id="@+id/CopyDReport"
                     android:text="Detailed Report" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:orientation="horizontal">

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_weight="1"
                     android:id="@+id/mainEdit"
                     android:text="Edit Coop" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_weight="1"
                     android:id="@+id/mainEditEvents"
                     android:text="Edit Events" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_weight="1"
                     android:id="@+id/mainSwitchCoop"
                     android:text="Switch Coop" />

            </LinearLayout>

            <View
                 android:layout_height="3dp"
                 android:layout_width="match_parent"
                 android:background="?android:attr/listDivider"
                 android:id="@+id/divider" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="horizontal">

                <EditText
                     android:layout_height="48dp"
                     android:layout_width="wrap_content"
                     android:hint="Player Name"
                     android:singleLine="true"
                     android:ems="10"
                     android:inputType="text"
                     android:id="@+id/mainPlayerName" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:id="@+id/mainSaveName"
                     android:text="Save" />

            </LinearLayout>

            <Switch
                 android:layout_height="48dp"
                 android:layout_width="wrap_content"
                 android:id="@+id/mainAutoDismiss"
                 android:text="Auto Dismiss Notifications" />

            <View
                 android:layout_height="3dp"
                 android:layout_width="match_parent"
                 android:background="?android:attr/listDivider"
                 android:id="@+id/divider2" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:text="Send Fake Notification" />

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:orientation="horizontal">

                <EditText
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:hint="Player"
                     android:ems="6"
                     android:inputType="text"
                     android:id="@+id/fake_player" />

                <EditText
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:hint="Coop"
                     android:ems="6"
                     android:inputType="text"
                     android:id="@+id/fake_coop" />

                <Button
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:id="@+id/fake_send"
                     android:text="Send" />

            </LinearLayout>

            <Switch
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:id="@+id/fakeType"
                 android:text="Send CR?" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>